<ContentDialog x:Class="Playground.Views.AuthTokenDialog"
			   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			   xmlns:local="using:Playground.Views"
			   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			   Title="Auth Token"
			   PrimaryButtonText="Save"
			   CloseButtonText="Cancel"
			   DefaultButton="Primary"
			   PrimaryButtonCommand="{Binding SaveCommand}">
	<StackPanel>
		<TextBlock Text="Enter auth token" />
		<TextBox Text="{Binding AuthToken, Mode=TwoWay}" /> 
	</StackPanel>
</ContentDialog>
